{
  "compilerOptions": {
    "target": "ES2020",                       
    "module": "CommonJS",                     
    "moduleResolution": "node",               
    "outDir": "./dist",                       
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": false
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}